<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

  <!-- SERVLETS -->
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>com.epam.web.Controller</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>

  <!-- FILTERS -->
  <filter>
    <filter-name>command-handler</filter-name>
    <filter-class>com.epam.web.util.CommandParamHandlerFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>command-handler</filter-name>
    <servlet-name>main</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter>
    <filter-name>authentication</filter-name>
    <filter-class>com.epam.web.security.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>authentication</filter-name>
    <servlet-name>main</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter>
    <filter-name>authorization</filter-name>
    <filter-class>com.epam.web.security.AuthorizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>authorization</filter-name>
    <servlet-name>main</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter>
    <filter-name>localization</filter-name>
    <filter-class>com.epam.web.localization.LocalizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>localization</filter-name>
    <servlet-name>main</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

</web-app>
