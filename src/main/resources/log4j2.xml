<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="ConnectionPoolFile" filename="logs/connectionPool.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.epam.web.Controller" level="WARN" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.epam.web.connection.ConnectionPool" level="WARN" additivity="false">
            <AppenderRef ref="ConnectionPoolFile" />
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
